{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "node",
    "newLine": "LF",
    "strict": true,
    "declaration": true,

    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitThis": false,

    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "strictNullChecks": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "src/*": ["src/*"],
      "test/*": ["test/*"]
    }
  },
  "include": ["src", "test", "testHelper/utils.ts", "testHelper/settings.ts"],
}
